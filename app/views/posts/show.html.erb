<h1><%= @post.id  %>投稿内容　</h1>
<div class="card">
　<div class="card-body">   
    <h5 class="card-title"><%= @post.title %></h5>
    <p class="card-text"><%= @post.traveled %></p>
    <p class="card-text"><%= @post.travel_day %></p>
    <p class="card-text"><%= @post.travel_coment %></p>
    <p class="card-text"><%= @post.other_coment %></p>
    
</div>　


<%# 他者からのコメント %>
<%= form_for(@comment, url: comment_create_path) do |f| %>
  <%= f.text_area :comment %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.submit "コメントする" %>
<% end %>